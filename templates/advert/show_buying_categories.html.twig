{% extends "layout.html.twig" %}

{% block title %}

    {{ parent() }}Buy
    
{% endblock %}

{% block content %}



        <div class="container">
            <h2>Ici les annonces de section Achat / Buy / travailler le visuel</h2>
            <p>The .table-hover class enables a hover state on table rows:</p>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Product</th>
                    <th>Category</th>
                    <th>Author</th>
                    <th>Creation Date</th>
                </tr>
                </thead>
                <tbody>

            {% for advert in buyingCategories %}

                <tr>
                    <td>
                        {#<a href="">#}
                            {{ advert.title }}
                       {# </a>#}
                    </td>

                    <td>
                        <a href="{{ path('filter_adverts_by_category', {'id' : advert.category.id }) }}">
                            {{ advert.category.label }}
                        </a>
                    </td>

                    <td>{{ advert.user.pseudo }}</td>
                    <td>{{ advert.creationDate|date('Y-m-d') }}</td>
                </tr>

                {#{{ dump(advert.category.id ) }}#}
            {% endfor %}



                </tbody>
            </table>
        </div>

    {% include 'includes/_categories.html.twig' %}

{% endblock %}

