{% extends "layout.html.twig" %}

{% block title %}

    {{ parent() }}my adverts

{% endblock %}

{% block content %}

    <section class="container">

        <div class="panel panel-default">
            {% for advert in advertdata %}
                {% if app.user.id is defined %}
                    {% if app.user.id == advert.user.id %}

                    <div class="panel-body">
                        <a href="{{ path('advert_edit', {'advertslug' : advert.slug }) }}" class="col-sm-2 btn btn-default">
                            Edit
                        </a>

                        <a href="{{ path('delete_advert', {'id': advert.id }) }}" class="col-sm-2 btn btn-danger">
                            Delete
                        </a>
                    </div>
                    {% endif %}
                {% endif %}
                    <div class="panel-body">
                        <h2 class="text-center">{{ advert.title }}</h2>
                        <p class="well well-lg">{{ advert.description }}</p>
                        <div class="col-md-6">
                            <p class="badge">{{ advert.price }} â‚¬</p>
                            <p><a href="#" class="badge alert-danger">Add to whislist</a></p>
                        </div>
                        <div class="col-md-6">
                            <p class="text-right">{{ advert.creationDate | date('Y-m-d') ~' '~ advert.creationDate | date('H:i:s') }}</p>
                            <p class="text-right"><a href="{{ path('show_public_profile', {'pseudo': advert.user.pseudo}) }}">{{ advert.user.pseudo }}</a></p>
                        </div>
                        <div class="text-center">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            {% if is_granted('ROLE_USER') %}
                            <a href="{{ path('user_contact', {'slug': advert.slug}) }}">
                                <button class="btn btn-primary btn-lg alert-success">Contact user about this advert</button>
                            </a>
                            {% endif %}
                        {% else %}
                            <button class="btn btn-primary btn-lg" disabled="disabled">Contact user about this advert</button>
                            <p>You can't contact any user for the moment. Please, <a href="{{ path('login') }}">Log in</a> or <a href="{{ path('register') }}">Register</a>.</p>
                        {% endif %}

                        </div>
                    </div>
            {% endfor %}

        </div>
    </section>

{% endblock %}

