{% extends "layout.html.twig" %}

{% block title %}

    {% for advert in filteredAdvertsByCategory %}

        {#{{ parent() }} #}{{ advert.title }}

    {% endfor %}
{% endblock %}

{% block content %}
    {#{% set current_path = app.request.get('_route') %}
    {{ current_path }}#}



    <div class="container">
        <h2>Ici les annonces de la section (variable) </h2>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Product</th>
                <th>Category</th>
                <th>Author</th>
                <th>Creation Date</th>
            </tr>
            </thead>
            <tbody>

            {% for advert in filteredAdvertsByCategory %}
                <tr>
                    <td>
                        {{ advert.title }}
                    </td>
                    <td>
                        <a href="{{ path('show_advert', {'advertslug': advert.slug }) }}">
                            {{ advert.description | shorten_text }}
                        </a>
                    </td>
                    <td>{{ advert.category.label }}</td>
                    <td>{{ advert.user.pseudo }}</td>
                    <td>{{ advert.creationDate|date('Y-m-d') }}</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>

        <div class="text-center">
            <ul class="pagination">
                {#{{ knp_pagination_render(filteredAdvertsByCategory) }}#}
            </ul>
        </div>


    </div>


    {% include 'includes/_categories.html.twig' %}
{% endblock %}