        </div>
    </div>
    <!-- browse ends here -->


    <!-- banner starts here -->
    <div class="banner">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <img src="images/ads.jpg" class="img-responsive" alt="image" title="title"  />
                </div>
            </div>
        </div>
    </div>

{% endblock content %}
