{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }}Home{% endblock %}

{% block content %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ message }}
        </div>
    {% endfor %}

    <!-- slider starts here -->
    <div class="slideshow owl-carousel">
        <div class="item">
            <img src="{{ asset('images/banner.jpg') }}" alt="banner" title="banner" class="img-responsive"/>
        </div>
        <div class="item">
            <img src="{{ asset('images/banner.jpg') }}" alt="banner" title="banner" class="img-responsive"/>
        </div>
        <div class="item">
            <img src="{{ asset('images/banner.jpg') }}" alt="banner" title="banner" class="img-responsive"/>
        </div>
    </div>
    <!-- slider ends here -->

    <!-- browse starts here -->
    <div class="browse">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h2>Choose Section</h2>
                    <hr/>
                    <ul class="list-inline">
                        <li><a href="{{ path('show_buying_categories') }}"><img src="{{ asset('images/shopping.png') }}" alt="icon" title="icon" class="img-responsive" /><p>Buy</p></a></li>
                        <li><a href="mobile_category.html"><img src="{{ asset('images/selling.png') }}" alt="icon" title="icon" class="img-responsive" /><p>Sell</p></a></li>
                        <li><a href="electonics_category.html"><img src="{{ asset('images/Rental.png') }}" alt="icon" title="icon" class="img-responsive" /><p>Rent</p></a></li>
                        <li><a href="real_estate_category.html"><img src="{{ asset('images/service.png') }}" alt="icon" title="icon" class="img-responsive" /><p>Service</p></a></li>

                    </ul>
                </div>
